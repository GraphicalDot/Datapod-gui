#:kivy 1.10.0



<UserRegistration>:
    BoxLayout:
        orientation: "vertical"
        
        BoxLayout:
            size_hint_y: 0.2
            padding: [10, 10, 10, 10]
            orientation: "horizontal"
            Label:
                text: "Username"
            TextInput:
                id: username
                hint_text: "username"
                text:''
                multiline: False

