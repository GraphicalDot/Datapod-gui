#:kivy 1.10.0
#:include Application/userpage.kv
#:include user_registration.kv
#:include forgot_password.kv
#:import hex kivy.utils.get_color_from_hex

#:import hex kivy.utils.get_color_from_hex

<FeynTextInput@TextInput>:
    canvas.before:
        Color:
            rgb: hex("#D3B5B0")
        Rectangle:
            pos: self.pos
            size: [self.size[0], 5]
            
            
    background_normal: ""
    border: (0, 0, 0, 0)
    valign: "middle"




<LoginPage>:
    GridLayout:
        canvas.before:
            Color:
                rgba: hex("#FFFFFF")
            Rectangle:
                pos: self.pos
                size: self.size
        cols: 2
        spacing: 0
        orientation: "horizontal"
        padding: 20
        BoxLayout:
            canvas.before:
                Color:
                    rgba: hex("#D3B5B0")
                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: "vertical"
            size_hint: 1,1

            Image
                source: 'logo.png'
                mipmap: True
                width: self.width
                height: self.height
                allow_stretch:False
                keep_ratio:True
        GridLayout:
            cols: 1
            padding: 0,0,0,0
            spacing: 10, 10
            size_hint: 1, .2
            orientation: "vertical"
            
            GridLayout:
                cols: 2
                orientation: "vertical"
                row_force_default: True
                row_default_height: 50
                spacing: [10, 10]
                padding: [10, 100, 10, 10]
                

                WrappedLabel:
                    text: "[b][color=#382E1C]Username[/b]"
                    markup: True
                    valign: "middle"

                FeynTextInput:
                    id: username
                    hint_text: "username"
                    markup: True
                    text:''
                    multiline: False


                WrappedLabel:
                    text: "[b][color=#382E1C]Password[/b]"
                FeynTextInput:
                    id: password
                    hint_text: "password"
                    password: True
                    text:''
                    multiline: False

            GridLayout:
                orientation: "vertical"
                padding: 10,10,10,10
                spacing: 10
                size_hint: 1, .4
                cols: 1
                WrappedButton:
                    text: "[b][color=#382E1C]Login[/b]"
                    markup: True
                    on_press: root.do_login(username.text, password.text)
                WrappedButton:
                    text: "[b][color=#382E1C]Register[/b]"
                    on_press: root.do_registration()
                WrappedButton:
                    text: "[b][color=#382E1C]Forgot password[/b]"
                    on_press: root.do_forgot_password()
                    