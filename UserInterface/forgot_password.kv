<ForgotPassword>:
    BoxLayout:
        padding: 5,5,5,5
        spacing: [10, 10]
        size_hint: 1, 1
        orientation: "vertical"
        

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 1
            Label:
                size_hint: 1, 0.25
                text: "Old Password"
            TextInput:
                id: oldpassword
                hint_text: "old password"
                size_hint: 1, 0.25
                password: True
                text:''
                multiline: False

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 1
            Label:
                size_hint: 1, 0.25
                text: "New Password"
            TextInput:
                id: newpassword
                size_hint: 1, 0.25
                hint_text: "New password"
                password: True
                text:''
                multiline: False

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 1
            Label:
                size_hint: 1, 0.25
                text: "Repeat password"
            TextInput:
                id: repeatpassword
                hint_text: "repeat password"
                password: True
                size_hint: 1, 0.25
                text:''
                multiline: False




        BoxLayout:
            orientation: "horizontal"
            padding: 10,10,10,10
            spacing: 10
        
            Button:
                size_hint: 1,0.25
                text: "Submit"
                on_press: root.on_cancel()
                
            Button:
                size_hint: 1,0.25
                text: "Cancel"
                on_press: root.on_cancel()
